<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
   
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/error"
        android:visibility="gone"
        android:paddingBottom="20dp"
        android:paddingTop="320dp"

        android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/errorcloud"
        android:src="@drawable/error_view_cloud"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:id="@+id/errortext"
        android:text="No Internet Connection"
        android:textSize="20sp"
        android:paddingBottom="15dp"
        android:textColor="#CC000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

<ScrollView
    android:orientation="vertical" 
    android:id="@+id/scroll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
             android:background="@drawable/pback">

<LinearLayout
       android:layout_width="match_parent"
    android:orientation="vertical"
  
        android:background="#85FFFFE7"
    android:layout_height="wrap_content" >

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
           android:id="@+id/t1"
             android:layout_marginTop="10dp"
         android:text="Placement Procedure"
         android:textColor="#880015"
         android:textSize="25sp"
         android:textStyle="bold" />
    
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trans1"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text=""
             android:textColor="#880015"
        android:textSize="17sp" />

</LinearLayout>
</ScrollView>    
    </LinearLayout>

</FrameLayout>

